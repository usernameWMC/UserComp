{
  "name": "usercomp",
  "version": "1.0.0",
  "description": "Component Test",
  "type": "module",
  "main": "./dist/umd/index.umd.cjs",
  "module": "./dist/es/index.js",
  "files": ["dist"],
  "exports":{
    ".":{
      "import": "./dist/es/index.js",
      "require": "./dist/umd/index.umd.cjs"
    },
    "./dist/":{
      "import": "./dist/",
      "require": "./dist/"
    }
  },
  "sideEffects":[
    "./dist/index.css"
  ],
  "scripts": {
    "build":"run-s clean build-only move-style",
    "build-only":"run-p build-es build-umd",
    "build-umd": "vite build --config vite.umd.config.js",
    "build-es": "vite build --config vite.es.config.js",
    "move-style": "move-file dist/es/style.css dist/index.css",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.5.1",
    "@fortawesome/free-solid-svg-icons": "6.5.1",
    "@fortawesome/vue-fontawesome": "3.0.6",
    "@popperjs/core": "^2.11.8",
    "async-validator": "^4.2.5"
  },
  "devDependencies": {
    "@usercomp/components": "workspace:*"
  },
  "peerDependencies": {
    "vue": "^3.4.19"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
